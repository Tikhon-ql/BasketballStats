@model MyBasketballStats.ViewModels.Identity.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label">Password confirm</label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-dark mr-1" style="width:5vw"/>
                <a class="btn btn-dark" asp-controller="Account" asp-action="Login" style="width:5vw">Back</a>
            </div>
            <input id="city" name="city" type="text" style="visibility:hidden" />
            <input id="country" name="country" type="text" style="visibility:hidden" />
            <input id="latitude" name="latitude" type="text" style="visibility:hidden" />
            <input id="longitude" name="longitude" type="text" style="visibility:hidden" />
        </form>
    </div>
</div>
<script src="https://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU" type="text/javascript">
</script>
<script>
    ymaps.ready(function () {
        console.log(ymaps.geolocation);
        var crdn = ymaps.geolocation;
        document.querySelector("#latitude").value = crdn.latitude;
        document.querySelector("#longitude").value = crdn.longitude;
        document.querySelector("#city").value = crdn.city;
        document.querySelector("#country").value = crdn.country;
    });
</script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
